public class oi12 {
    public static void main(String[] args){
        Scanner leia = new Scanner(System.in);
        System.out.println("Digite o ano de nascimento ");
        int an = leia.nextInt();


        System.out.println("Digite o ano atual ");
        int aa = leia.nextInt();
        int idade = aa - an;
        System.out.println("Voce ja fez aniversario? [S/N] ");
        String conf = leia.next().toUpperCase(Locale.ROOT);

        if (!conf.equals("S")) {
            idade--;
        }

        System.out.println("A sua idade atual Ã© " + idade + "e sua idade daqui a 17 anos vai ser " + (idade + 17));
    }
}

// Receba o ano de nascimento e o ano atual. Calcule e mostre a diferenca desses valores
